@model TrueMoney.Models.ViewModels.DealIndexViewModel
@{
    ViewBag.Title = "Applications";
}

<h2>@ViewBag.Title</h2>
@if (Model.Deals.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Deals.First().CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deals.First().Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deals.First().InterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deals.First().Description)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Deals)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterestRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (Model.CurrentUserId == item.OwnerId)
                    {
                        @Html.ActionLink("Посмотреть мою заявку", "Details", new { id = item.Id })
                    }
                    else
                    {
                        @Html.ActionLink("Детали", "Details", new { id = item.Id })
                    }
                </td>
            </tr>
        }
    </table>
}
